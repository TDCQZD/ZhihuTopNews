<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/s_demo_color_background_red">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:onClick="btn_back"
            android:src="@drawable/button_demobackselector"/>

        <TextView
            android:id="@+id/bar_title"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/btn_back"
            android:gravity="center"
            android:text="1:N"
            android:textColor="@color/s_color_font_hightlight"
            android:textSize="@dimen/s_size_font_bar"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/superid_demo_usercenterbg_img"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:onClick="btnAddGroup"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="新增群组"
                android:textColor="@color/s_color_font_main"
                android:textSize="@dimen/s_size_font_text"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:onClick="btnDeleteGroup"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="删除群组"
                android:textColor="@color/s_color_font_main"
                android:textSize="@dimen/s_size_font_text"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:onClick="btnAddUserToGroup"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="加入群组"
                android:textColor="@color/s_color_font_main"
                android:textSize="@dimen/s_size_font_text"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:onClick="btnDeleteUserFromGroup"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="从群组中移除"
                android:textColor="@color/s_color_font_main"
                android:textSize="@dimen/s_size_font_text"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:onClick="btnFaceGroup"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="1:N"
                android:textColor="@color/s_color_font_main"
                android:textSize="@dimen/s_size_font_text"/>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>